{{#partial "title"}}Sign In{{/partial}}

{{#partial "content"}}

    <header>
        <div class="container">
            <div class="site-header">
                <a class="logo" href="/">SparkBlog</a>
                <a class="new-entry button button-round" href="new.hbs"><i class="material-icons">create</i></a>
            </div>
        </div>
    </header>
    <section>
        {{#if flash}}
            <p>{{flash}}</p>
        {{/if}}
        <div class="container">
            <div class="password">
                <form method="post" action="/password">
                    <label for="password">Enter Password</label>
                    <input type="password" name="password" id="password"><br>
                    <input type="submit" value="Submit" class="button">
                    <a href="/" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{#partial "footer"}}
    <footer>
        <div>
            <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
            <a href="#">Terms</a>
        </div>
    </footer>
{{/partial}}
